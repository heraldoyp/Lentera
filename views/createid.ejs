<html>
    <head>
      <title>Register new User</title>
      <link rel="stylesheet" href="https://bootswatch.com/4/sketchy/bootstrap.min.css">
    </head>
      <body>
        <%- include('includes/navbar') %>
        <center>
            <h1><br></h1>
            <h1>Register new User!</h1>
        </center>
        <form action="/user/register" method="post">
          <div class = "container" style="width: 33%">
              <fieldset>
                <label for="firstName">First Name</label>
                  <input type="text" class="form-control" placeholder="Masukkan nama depan!" name="firstName" maxlength="15" required>
                  <small><br></small>

                <label for="lastName">Last Name</label>
                  <input type="text" class="form-control" placeholder="Masukkan nama belakang!" name="lastName"maxlength="15">
                  <small><br></small>
                
                <label for="email">Email address</label> 
                  <input type="email" class="form-control" placeholder="Masukkan email!" name="email">
                  <small align="right" id="email tnc" class="form-text text-muted">Kita tidak akan mengeshare email mu dengan siapapun!</small>
                  
                <label for="username">Username</label>
                  <input type="text" class="form-control" placeholder="Masukkan username!" name="username" maxlength="15" required>
                  <small><br></small>
                  
                <label for="password">Password</label>
                  <input type="password" class="form-control" placeholder="Masukkan password!" name="password" maxlength="15"  pattern=".{5,15}" required title="5-15 karakter!">
                  <small><br></small>
                
                <p align ="right"><button type="submit" class="btn btn-primary">Submit</button></p>
              </fieldset>
            </div>
          </form>  
      </body>
    </html>